<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/grid_spacing_16_dp"
    tools:context="dev.artur.joaodatripa.fragments.TablesFragment">

    <GridView
        android:id="@+id/list_of_tables"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="true"
        android:gravity="center"
        android:horizontalSpacing="@dimen/grid_spacing_16_dp"
        android:nestedScrollingEnabled="true"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/grid_spacing_16_dp" />

</LinearLayout>
