<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_margin="@dimen/layout_key_line_16_dp"
    android:background="@color/cardview_dark_background"
    android:elevation="@dimen/cardview_default_elevation"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    tools:context="dev.artur.joaodatripa.activities.itemSummaryActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/layout_key_line_16_dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:fitsSystemWindows="true" />

        <TextView
            android:id="@+id/item_description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_image"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="Título do Ítem" />

        <TextView
            android:id="@+id/item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_description_title"
            android:layout_centerInParent="true"
            tools:text="R$ 00,00" />

        <TextView
            android:id="@+id/active_stock_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_price"
            android:text="Em oferta:  " />

    </RelativeLayout>


</android.support.v7.widget.CardView>
