<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/tan_background2"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/table_number"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="6dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/layout_key_line_16_dp"
        android:textColor="@color/tan_background"
        android:textSize="18sp"
        tools:text="Mesa 8" />

    <TextView
        android:id="@+id/main_client_name"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/table_number"
        android:layout_margin="6dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/tan_background"
        tools:text="DisponÃ­vel" />

    <TextView
        android:id="@+id/total_order_text_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/main_client_name"
        android:layout_margin="6dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:textColor="@color/tan_background"
        tools:text="R$ 32,50" />
</RelativeLayout>