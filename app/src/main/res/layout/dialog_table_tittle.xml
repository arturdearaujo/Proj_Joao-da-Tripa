<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:paddingTop="24dp"
        android:text="Qual o nome do cliente?"
        android:textColor="@color/tan_background"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_client_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/grid_spacing_16_dp"
        android:layout_marginStart="@dimen/grid_spacing_16_dp"
        android:gravity="start"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_register_table_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anotar" />
</LinearLayout>